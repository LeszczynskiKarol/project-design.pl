const styles = [
  {
    name: 'Skandynawski',
    description: 'Jasne kolory, naturalne materiały, minimalizm',
    image: 'https://www.meblesystem.pl/wp-content/uploads/2025/09/Dorota-projektPROJEKT_SALON_Z_ANEKSEM_SZABAT_5_opt.webp',
    characteristics: ['Biel i szarości', 'Drewno', 'Prostota', 'Funkcjonalność']
  },
  {
    name: 'Nowoczesny',
    description: 'Czyste linie, minimalizm, technologia',
    image: 'https://www.meblesystem.pl/wp-content/uploads/2025/09/Dorota-projektMIESZKANIE_CIECHOCINEK_1_opt.webp',
    characteristics: ['Geometria', 'Neutral colors', 'Innowacje', 'Elegancja']
  },
  {
    name: 'Klasyczny',
    description: 'Ponadczasowa elegancja, symetria, bogate dekoracje',
    image: 'https://www.meblesystem.pl/wp-content/uploads/2025/09/Dorota-projektPROJEKT_JASKOLCZA_TORUN_3_opt.webp',
    characteristics: ['Symetria', 'Ornamentyka', 'Drewno', 'Elegancja']
  },
  {
    name: 'Industrialny',
    description: 'Surowe materiały, otwarte przestrzenie, loft',
    image: 'https://cdn.myportfolio.com/41734a72-15e8-43e5-bf6c-48e68f950787/ece5504d-43cd-4fe5-8ceb-bdaf94ffcea3_rw_1920.jpg?h=62796c0c4c1839efa2b9c24bd1f2b37c',
    characteristics: ['Cegła', 'Metal', 'Beton', 'Otwartość']
  }
];
---

<BaseLayout {...seoData}>
  <!-- Hero Section -->
  <section class="relative min-h-[85vh] flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0">
      <img 
        src="https://www.meblesystem.pl/wp-content/uploads/2025/09/Dorota-projektPROJEKT_JASKOLCZA_TORUN_9_opt.webp" 
        alt="Aranżacje wnętrz Toruń"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-slate-900/80 via-slate-900/60 to-slate-900/80"></div>
    </div>
    
    <div class="container mx-auto px-4 lg:px-8 relative z-10 text-center">
      <h1 class="font-display text-5xl lg:text-7xl font-bold text-white mb-6 animate-fade-in">
        Aranżacje <span class="text-amber-500">wnętrz</span> Toruń
      </h1>
      <p class="text-xl text-white/90 mb-8 max-w-3xl mx-auto leading-relaxed">
        Profesjonalne aranżacje mieszkań i domów. Tworzymy przestrzenie, które odzwierciedlają Twoją osobowość 
        i wspierają codzienne życie. Od koncepcji po realizację.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <a href="#mieszkania" class="bg-amber-500 text-white px-8 py-4 rounded-full font-medium text-lg hover:bg-amber-600 transition-all hover:shadow-xl inline-block">
          Aranżacje mieszkań
        </a>
        <a href="#domy" class="border-2 border-white text-white px-8 py-4 rounded-full font-medium text-lg hover:bg-white hover:text-slate-900 transition-all inline-block">
          Aranżacje domów
        </a>
      </div>
      
      <!-- Quick stats -->
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto">
        <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 border border-white/20">
          <div class="text-3xl font-bold text-amber-500">100+</div>
          <div class="text-white text-sm">Aranżacji mieszkań</div>
        </div>
        <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 border border-white/20">
          <div class="text-3xl font-bold text-amber-500">50+</div>
          <div class="text-white text-sm">Aranżacji domów</div>
        </div>
        <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 border border-white/20">
          <div class="text-3xl font-bold text-amber-500">10+</div>
          <div class="text-white text-sm">Lat doświadczenia</div>
        </div>
        <div class="bg-white/10 backdrop-blur-sm rounded-xl p-4 border border-white/20">
          <div class="text-3xl font-bold text-amber-500">98%</div>
          <div class="text-white text-sm">Zadowolonych klientów</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Co to są aranżacje wnętrz -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="font-display text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
            Czym są <span class="text-amber-500">aranżacje wnętrz</span>?
          </h2>
          <p class="text-lg text-slate-600 leading-relaxed">
            Aranżacja wnętrz to sztuka harmonijnego łączenia funkcjonalności z estetyką. 
            To proces tworzenia przestrzeni, która nie tylko pięknie wygląda, ale przede wszystkim 
            doskonale służy swoim mieszkańcom.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <h3 class="font-display text-2xl font-bold text-slate-900 mb-4">
              Aranżacja to więcej niż dekoracja
            </h3>
            <p class="text-slate-600 mb-6 leading-relaxed">
              Podczas gdy dekoracja skupia się na estetyce, aranżacja wnętrz to kompleksowe podejście 
              obejmujące planowanie przestrzeni, dobór materiałów, kolorystykę, oświetlenie i meble. 
              To proces przemyślany od początku do końca.
            </p>
            <ul class="space-y-3">
              <li class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-amber-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span class="text-slate-600">Analiza funkcjonalna przestrzeni</span>
              </li>
              <li class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-amber-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span class="text-slate-600">Optymalizacja rozkładu pomieszczeń</span>
              </li>
              <li class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-amber-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span class="text-slate-600">Dobór materiałów i kolorystyki</span>
              </li>
              <li class="flex items-start space-x-3">
                <svg class="w-6 h-6 text-amber-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span class="text-slate-600">Projekt oświetlenia i elektryki</span>
              </li>
            </ul>
          </div>
          <div>
            <img 
              src="https://www.meblesystem.pl/wp-content/uploads/2025/09/Dorota-projektMIESZKANIE_CIECHOCINEK_1_opt.webp" 
              alt="Przykład aranżacji wnętrza"
              class="rounded-2xl shadow-2xl"
              loading="lazy"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Aranżacje mieszkań -->
  <section id="mieszkania" class="py-20 bg-gradient-to-br from-slate-50 to-white">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="font-display text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
          Aranżacje <span class="text-amber-500">mieszkań</span>
        </h2>
        <p class="text-lg text-slate-600 max-w-3xl mx-auto">
          Specjalizujemy się w aranżacjach mieszkań każdej wielkości. Od kawalerek po przestronne apartamenty 
          - tworzymy wnętrza funkcjonalne, estetyczne i dopasowane do budżetu.
        </p>
      </div>

      <div class="grid lg:grid-cols-3 gap-8">
        {apartmentTypes.map((type, index) => (
          <div 
            class="bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all hover:-translate-y-2 overflow-hidden fade-in-observe"
            style={`animation-delay: ${index * 100}ms`}
          >
            <div class="bg-gradient-to-br from-amber-500 to-amber-600 p-8 text-white">
              <div class="mb-4" set:html={type.icon} />
              <h3 class="font-display text-2xl font-bold mb-2">{type.title}</h3>
              <div class="text-amber-100">{type.area}</div>
            </div>
            <div class="p-8">
              <p class="text-slate-600 mb-6">{type.description}</p>
              <ul class="space-y-3 mb-6">
                {type.features.map(feature => (
                  <li class="flex items-center text-sm text-slate-600">
                    <svg class="w-4 h-4 text-amber-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>              
            </div>
          </div>
        ))}
      </div>

      <!-- Dlaczego warto -->
      <div class="mt-16 bg-white rounded-3xl shadow-xl p-8 lg:p-12">
        <h3 class="font-display text-3xl font-bold text-slate-900 mb-8 text-center">
          Dlaczego warto zainwestować w aranżację mieszkania?
        </h3>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="text-center">
            <div class="w-16 h-16 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
              </svg>
            </div>
            <h4 class="font-semibold text-slate-900 mb-2">Wzrost wartości</h4>
            <p class="text-sm text-slate-600">Dobrze zaprojektowane mieszkanie zwiększa swoją wartość rynkową</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h4 class="font-semibold text-slate-900 mb-2">Oszczędność czasu</h4>
            <p class="text-sm text-slate-600">Unikamy kosztownych błędów i przeróbek podczas remontu</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5"/>
              </svg>
            </div>
            <h4 class="font-semibold text-slate-900 mb-2">Komfort życia</h4>
            <p class="text-sm text-slate-600">Przestrzeń dostosowana do Twojego stylu życia i potrzeb</p>
          </div>
          <div class="text-center">
            <div class="w-16 h-16 bg-amber-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
            </div>
            <h4 class="font-semibold text-slate-900 mb-2">Pewność rezultatu</h4>
            <p class="text-sm text-slate-600">Profesjonalny projekt gwarantuje spójność i jakość wykończenia</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Aranżacje domów -->
  <section id="domy" class="py-20 bg-white">
    <div class="container mx-auto px-4 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="font-display text-4xl lg:text-5xl font-bold text-slate-900 mb-6">
          Aranżacje <span class="text-amber-500">domów</span> jednorodzinnych
        </h2>
        <p class="text-lg text-slate-600 max-w-3xl mx-auto">
          Kompleksowe aranżacje domów to nasza specjalność. Projektujemy spójne wnętrza, 
          które harmonizują z architekturą budynku i otoczeniem.
        </p>
      </div>

      <div class="grid lg:grid-cols-3 gap-8 mb-16">
        {houseTypes.map((type, index) => (
          <div 
            class="bg-slate-50 rounded-2xl p-8 hover:shadow-xl transition-all fade-in-observe"
            style={`animation-delay: ${index * 100}ms`}
          >
            <div class="text-amber-500 mb-4" set:html={type.icon} />
            <h3 class="font-display text-2xl font-bold text-slate-900 mb-2">{type.title}</h3>
            <div class="text-sm text-slate-500 mb-4">{type.area}</div>
            <p class="text-slate-600 mb-6">{type.description}</p>
            <div class="space-y-2">
