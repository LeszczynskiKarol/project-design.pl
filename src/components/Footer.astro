---
// src/components/Footer.astro
const currentYear = new Date().getFullYear();

const services = [
  'Projektowanie wnętrz mieszkań',
  'Aranżacje domów jednorodzinnych',
  'Projektowanie biur i przestrzeni komercyjnych',
  'Meble na wymiar',
  'Konsultacje projektowe',  
];

const links = [
  { href: '/', label: 'Strona główna' },
  { href: '/aranzacje-wnetrz', label: 'Aranżacje wnętrz' },
  { href: '/studio-projektowania-wnetrz', label: 'Studio' },
  { href: '/projektowanie-mebli', label: 'Meble na wymiar' },
  { href: '/architekci-wnetrz', label: 'Architekci' },
  { href: '/realizacje', label: 'Realizacje' }
];
---

<footer class="bg-slate-900 text-white mt-20">
  <div class="container mx-auto px-4 lg:px-8 py-12 lg:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- About -->
      <div>
        <div class="flex items-center space-x-3 mb-4">
          <div class="w-10 h-10 bg-amber-500 rounded-lg flex items-center justify-center">
            <span class="text-white font-bold text-lg">PD</span>
          </div>
          <span class="font-display text-xl font-bold">Project Design</span>
        </div>
        <p class="text-slate-400 text-sm leading-relaxed">
          Profesjonalne projektowanie wnętrz w Toruniu. Tworzymy przestrzenie, które łączą funkcjonalność z estetyką, dostosowane do Twoich potrzeb i stylu życia. Realizacja projektów: <a href="https://www.meblesystem.pl" class="underline hover:text-amber-500 transition-colors">Meble Toruń</a> - Meble System.
        </p>        
      </div>

      <!-- Services -->
      <div>
        <h3 class="font-display text-lg font-bold mb-4">Nasze usługi</h3>
        <ul class="space-y-2">
          {services.map(service => (
            <li>
              <span class="text-slate-400 text-sm">
                {service}
              </span>
            </li>
          ))}
        </ul>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="font-display text-lg font-bold mb-4">Szybkie linki</h3>
        <ul class="space-y-2">
          {links.map(link => (
            <li>
              <a href={link.href} class="text-slate-400 text-sm hover:text-amber-500 transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="font-display text-lg font-bold mb-4">Kontakt</h3>
        <ul class="space-y-3">
          <li class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-amber-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <span class="text-slate-400 text-sm">Toruń, kujawsko-pomorskie</span>
          </li>
          <li class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-amber-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <a href="tel:+48123456789" class="text-slate-400 text-sm hover:text-amber-500 transition-colors">
              +48 123 456 789
            </a>
          </li>
          <li class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-amber-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <a href="mailto:kontakt@projectdesign.pl" class="text-slate-400 text-sm hover:text-amber-500 transition-colors">
              kontakt@projectdesign.pl
            </a>
          </li>
          <li class="flex items-start space-x-3">
            <svg class="w-5 h-5 text-amber-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            <span class="text-slate-400 text-sm">Pon-Pt: 7:00 - 16:30</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-slate-800 mt-12 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
        <p class="text-slate-400 text-sm">
          © {currentYear} Project Design. Wszystkie prawa zastrzeżone.
        </p>
        <div class="flex space-x-6">
          <a href="/polityka-prywatnosci" class="text-slate-400 text-sm hover:text-amber-500 transition-colors">
            Polityka prywatności
          </a>
          <a href="/regulamin" class="text-slate-400 text-sm hover:text-amber-500 transition-colors">
            Regulamin
          </a>          
        </div>
      </div>
    </div>
  </div>
</footer>