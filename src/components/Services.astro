---

<section id="uslugi" class="py-20 bg-slate-50">
  <div class="container mx-auto px-4 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16 fade-in-observe">
      <h2 class="font-display text-4xl lg:text-5xl font-bold text-slate-900 mb-4">
        Nasze <span class="text-amber-500">usługi</span>
      </h2>
      <p class="text-lg text-slate-600 max-w-2xl mx-auto">
        Oferujemy kompleksowe usługi projektowania wnętrz w Toruniu. Od pierwszej koncepcji po finalną realizację.
      </p>
    </div>

    <!-- Services Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service, index) => (
        <div 
          class="bg-white p-8 rounded-2xl shadow-lg hover:shadow-2xl transition-all hover:-translate-y-2 fade-in-observe group"
          style={`animation-delay: ${index * 100}ms`}
        >
          <div class="text-amber-500 mb-4 group-hover:scale-110 transition-transform" set:html={service.icon} />
          <h3 class="font-display text-2xl font-bold text-slate-900 mb-3">{service.title}</h3>
          <p class="text-slate-600 mb-4">{service.description}</p>
          <ul class="space-y-2">
            {service.features.map(feature => (
              <li class="flex items-center text-sm text-slate-500">
                <svg class="w-4 h-4 text-amber-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
          <a href="#kontakt" class="inline-flex items-center text-amber-500 font-medium mt-6 group-hover:text-amber-600 transition-colors">
            Dowiedz się więcej
            <svg class="w-5 h-5 ml-2 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
          </a>
        </div>
      ))}
    </div>
  </div>
</section>