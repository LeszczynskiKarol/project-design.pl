---
// src/components/Process.astro

const steps = [
  {
    number: '01',
    title: 'Konsultacja',
    description: 'Pierwsze spotkanie to rozmowa o tym, jak chcesz żyć, pracować, odpoczywać. Słuchamy Twoich potrzeb i marzeń.',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
    </svg>`
  },
  {
    number: '02',
    title: 'Koncepcja',
    description: 'Tworzymy szczegółowe studia koncepcyjne, moodboardy i wizualizacje. Przedstawiamy kompletną wizję przestrzeni.',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
    </svg>`
  },
  {
    number: '03',
    title: 'Projekt',
    description: 'Opracowujemy kompletną dokumentację projektową z rysunkami technicznymi, doborem materiałów i kosztorysem.',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
    </svg>`
  },
  {
    number: '04',
    title: 'Realizacja',
    description: 'Nadzorujemy wykonanie projektu, koordynujemy prace ekip i dbamy o zgodność z założeniami projektowymi.',
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"/>
    </svg>`
  }
];
---

<section class="py-20 bg-gradient-to-br from-amber-50 to-white">
  <div class="container mx-auto px-4 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16 fade-in-observe">
      <h2 class="font-display text-4xl lg:text-5xl font-bold text-slate-900 mb-4">
        Jak <span class="text-amber-500">pracujemy</span>
      </h2>
      <p class="text-lg text-slate-600 max-w-2xl mx-auto">
        Nasz proces projektowy to przemyślana droga od pierwszej rozmowy do gotowego wnętrza.
      </p>
    </div>

    <!-- Process Steps -->
    <div class="relative">
      <!-- Connection Line (Desktop) -->
      <div class="hidden lg:block absolute top-1/2 left-0 right-0 h-0.5 bg-amber-200 -translate-y-1/2"></div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 relative">
        {steps.map((step, index) => (
          <div class="fade-in-observe" style={`animation-delay: ${index * 150}ms`}>
            <div class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-2xl transition-all relative group">
              <!-- Step Number -->
              <div class="absolute -top-4 -right-4 w-12 h-12 bg-amber-500 text-white rounded-full flex items-center justify-center font-bold text-lg group-hover:scale-110 transition-transform">
                {step.number}
              </div>
              
              <!-- Icon -->
              <div class="w-12 h-12 bg-amber-100 rounded-lg flex items-center justify-center text-amber-500 mb-4" set:html={step.icon} />
              
              <!-- Content -->
              <h3 class="font-display text-xl font-bold text-slate-900 mb-3">{step.title}</h3>
              <p class="text-slate-600 text-sm leading-relaxed">{step.description}</p>
              
              <!-- Arrow (Desktop) -->
              {index < steps.length - 1 && (
                <div class="hidden lg:block absolute top-1/2 -right-4 transform -translate-y-1/2 translate-x-full text-amber-300">
                  <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </div>
              )}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center mt-16">
      <p class="text-lg text-slate-600 mb-6">
        Gotowy na metamorfozę swojego wnętrza?
      </p>
      <a href="#kontakt" class="bg-amber-500 text-white px-8 py-4 rounded-full font-medium text-lg hover:bg-amber-600 transition-all hover:shadow-xl transform hover:scale-105 inline-block">
        Rozpocznij swój projekt
      </a>
    </div>
  </div>
</section>