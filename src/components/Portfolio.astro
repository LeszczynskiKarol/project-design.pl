---
// src/components/Portfolio.astro

const projects = [
  {
    title: 'Apartament Starówka',
    category: 'Mieszkanie',
    area: '120 m²',
    style: 'Nowoczesny minimalizm',
    image: '/api/placeholder/600/400'
  },
  {
    title: 'Dom nad Wisłą',
    category: 'Dom jednorodzinny',
    area: '250 m²',
    style: 'Skandynawski',
    image: '/api/placeholder/600/400'
  },
  {
    title: 'Biuro Kreatywne',
    category: 'Przestrzeń komercyjna',
    area: '180 m²',
    style: 'Industrial',
    image: '/api/placeholder/600/400'
  },
  {
    title: 'Loft Bydgoskie',
    category: 'Mieszkanie',
    area: '85 m²',
    style: 'Loftowy',
    image: '/api/placeholder/600/400'
  },
  {
    title: 'Willa Rubinkowo',
    category: 'Dom jednorodzinny',
    area: '320 m²',
    style: 'Klasyczny elegancki',
    image: '/api/placeholder/600/400'
  },
  {
    title: 'Kawiarnia Centrum',
    category: 'Przestrzeń komercyjna',
    area: '95 m²',
    style: 'Boho',
    image: '/api/placeholder/600/400'
  }
];
---

<section id="portfolio" class="py-20 bg-white">
  <div class="container mx-auto px-4 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16 fade-in-observe">
      <h2 class="font-display text-4xl lg:text-5xl font-bold text-slate-900 mb-4">
        Nasze <span class="text-amber-500">realizacje</span>
      </h2>
      <p class="text-lg text-slate-600 max-w-2xl mx-auto">
        Zobacz wybrane projekty wnętrz zrealizowane przez nasz zespół w Toruniu i okolicach.
      </p>
    </div>

    <!-- Filter Buttons -->
    <div class="flex flex-wrap justify-center gap-4 mb-12">
      <button class="px-6 py-2 rounded-full bg-amber-500 text-white font-medium transition-all hover:bg-amber-600">
        Wszystkie
      </button>
      <button class="px-6 py-2 rounded-full border-2 border-slate-200 text-slate-700 font-medium transition-all hover:border-amber-500 hover:text-amber-500">
        Mieszkania
      </button>
      <button class="px-6 py-2 rounded-full border-2 border-slate-200 text-slate-700 font-medium transition-all hover:border-amber-500 hover:text-amber-500">
        Domy
      </button>
      <button class="px-6 py-2 rounded-full border-2 border-slate-200 text-slate-700 font-medium transition-all hover:border-amber-500 hover:text-amber-500">
        Komercyjne
      </button>
    </div>

    <!-- Projects Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project, index) => (
        <div 
          class="group cursor-pointer fade-in-observe"
          style={`animation-delay: ${index * 100}ms`}
        >
          <div class="relative overflow-hidden rounded-2xl shadow-lg group-hover:shadow-2xl transition-all">
            <img 
              src={project.image} 
              alt={project.title}
              class="w-full h-64 object-cover group-hover:scale-110 transition-transform duration-500"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-slate-900/80 via-slate-900/40 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
              <div class="absolute bottom-0 left-0 right-0 p-6 transform translate-y-4 group-hover:translate-y-0 transition-transform duration-300">
                <div class="flex items-center space-x-4 text-white/80 text-sm mb-2">
                  <span class="flex items-center">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"/>
                    </svg>
                    {project.area}
                  </span>
                  <span>•</span>
                  <span>{project.style}</span>
                </div>
                <a href="#" class="inline-flex items-center text-white font-medium hover:text-amber-400 transition-colors">
                  Zobacz projekt
                  <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
          <div class="mt-4">
            <span class="text-amber-500 text-sm font-medium">{project.category}</span>
            <h3 class="font-display text-xl font-bold text-slate-900 mt-1">{project.title}</h3>
          </div>
        </div>
      ))}
    </div>

    <!-- View All Button -->
    <div class="text-center mt-12">
      <a href="/portfolio" class="inline-flex items-center bg-slate-900 text-white px-8 py-4 rounded-full font-medium hover:bg-slate-800 transition-all hover:shadow-xl transform hover:scale-105">
        Zobacz wszystkie realizacje
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
  </div>
</section>